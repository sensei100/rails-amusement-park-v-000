<%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>

  <%= f.label "Select your name" %><br>
  <%= f.collection_select(:id, User.all, :id, :name) %>
  <br>

  <%= f.label :password %><br>
  <%= f.password_field :password %>
  <br>
  <br>
  <%= f.submit "Sign In" %>
<% end %>